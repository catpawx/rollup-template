{
  "name": "@catpawx/rollup-template",
  "version": "0.0.1",
  "description": "🐈‍⬛ 猫爪联盟前端团队 rollup的模板项目",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": ["rollup","template","rollup-template"],
  "author": "相甫",
  "license": "ISC",
  "scripts": {
    "prepare": "husky install",
    "commit": "git-cz",
    "build": "rimraf dist && rollup -c",
    "lint": "eslint packages --fix --ext .js",
    "lint:ts": "tsc --noEmit && eslint packages --ext .ts,.tsx",
    "prettier": "prettier --write 'packages/**/*.{js,json,yml,yaml,css,scss,less,ts,tsx,md}'",
    "lint-staged": "lint-staged --allow-empty",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish --registry=https://registry.npmjs.com/"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@catpawx/eslint-config-preset": "^0.0.3",
    "@catpawx/prettier-config-preset": "^0.0.1",
    "@changesets/cli": "^2.27.6",
    "@commitlint/cli": "^19.3.0",
    "commitizen": "^4.3.0",
    "cz-git": "^1.9.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "eslint": "^8.12.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.17.2",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5"
  }
}